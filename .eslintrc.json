{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "react-app"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "@typescript-eslint/explicit-member-accessibility": 0,
        "@typescript-eslint/camelcase": 0,
        "@typescript-eslint/explicit-function-return-type": [
            0,
            {
                "allowTypedFunctionExpressions": true
            }
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": [2, "always"],
        "no-use-before-define": [
            0,
            {
                "functions": false,
                "classes": false,
                "variables": false
            }
        ]
    },
    "overrides": []
}